{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "app/build/",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "output/typings"
  ],
  "filesGlob": [
    "./app/src/*.ts"
  ]
}
